<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/focusable_layout"
    android:descendantFocusability="beforeDescendants"
    android:animateLayoutChanges="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/bottom_toolbar_layout"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/top_toolbar_layout"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:elevation="16dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F1F8E9">

                <TextView
                    android:id="@+id/bt_connected_text"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/bt_connected"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/bt_connected"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/connect_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="88dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:onClick="onClickConnect"
                    android:text="@string/bt_connect"
                    android:theme="@style/Color.Button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:srcCompat="@drawable/connect_bluetooth"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp" />

            </android.support.constraint.ConstraintLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/scrollview_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/top_toolbar_layout">

            <HorizontalScrollView
                android:layout_width="800dp"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:scrollbarAlwaysDrawHorizontalTrack="false">


                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/winner_text_view"
                        style="@style/ScoreInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Winner Text Goes Here"
                        android:visibility="invisible"
                        app:layout_constraintLeft_toRightOf="@+id/player_one_points_text"
                        app:layout_constraintTop_toBottomOf="@+id/player_one_set_one_text" />

                    <EditText
                        android:id="@+id/player_one_name_text_view"
                        style="@style/PlayerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:ems="5"
                        android:inputType="textPersonName"
                        android:text="@string/player_one"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/player_one_games_text" />

                    <View
                        android:id="@+id/player_one_signal_image"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/player_signal"
                        app:layout_constraintBottom_toBottomOf="@+id/player_one_name_text_view"
                        app:layout_constraintLeft_toLeftOf="@+id/player_one_name_text_view" />

                    <EditText
                        android:id="@+id/player_two_name_text_view"
                        style="@style/PlayerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:ems="5"
                        android:inputType="textPersonName"
                        android:text="@string/player_two"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/player_two_games_text" />

                    <View
                        android:id="@+id/player_two_signal_image_one"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/player_signal"
                        app:layout_constraintBottom_toBottomOf="@+id/player_two_name_text_view"
                        app:layout_constraintLeft_toLeftOf="@+id/player_two_name_text_view" />

                    <View
                        android:id="@+id/player_two_signal_image_two"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/player_signal"
                        app:layout_constraintBottom_toBottomOf="@+id/player_two_name_text_view"
                        app:layout_constraintLeft_toRightOf="@+id/player_two_signal_image_one" />

                    <TextSwitcher
                        android:id="@+id/player_two_points_text"
                        style="@style/ScorePoints"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="00"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/player_two_name_text_view"
                        app:layout_constraintTop_toBottomOf="@+id/player_one_points_text" />

                    <TextSwitcher
                        android:id="@+id/player_one_points_text"
                        style="@style/ScorePoints"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="00"
                        android:textAlignment="center"
                        app:layout_constraintLeft_toRightOf="@+id/player_one_name_text_view"
                        app:layout_constraintTop_toBottomOf="@+id/games_text" />

                    <TextView
                        android:id="@+id/games_text"
                        style="@style/ScoreInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/games"
                        app:layout_constraintLeft_toRightOf="@+id/player_one_points_text"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextSwitcher
                        android:id="@+id/player_one_games_text"
                        style="@style/ScoreValues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="00"
                        app:layout_constraintLeft_toLeftOf="@+id/games_text"
                        app:layout_constraintTop_toTopOf="@+id/player_one_points_text" />

                    <TextSwitcher
                        android:id="@+id/player_two_games_text"
                        style="@style/ScoreValues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="00"
                        app:layout_constraintLeft_toLeftOf="@+id/games_text"
                        app:layout_constraintTop_toTopOf="@+id/player_two_points_text" />

                    <View
                        android:id="@+id/player_one_serve_signal"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/serve_transition_on"
                        app:layout_constraintBottom_toBottomOf="@+id/player_one_points_text"
                        app:layout_constraintLeft_toRightOf="@+id/player_one_points_text" />

                    <View
                        android:id="@+id/player_two_serve_signal"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/serve_transition_on"
                        app:layout_constraintBottom_toBottomOf="@+id/player_two_points_text"
                        app:layout_constraintLeft_toRightOf="@+id/player_two_points_text" />

                    <TextView
                        android:id="@+id/sets_text"
                        style="@style/ScoreInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/sets"
                        app:layout_constraintLeft_toRightOf="@+id/games_text"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextSwitcher
                        android:id="@+id/player_one_sets_text"
                        style="@style/ScoreValues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="00"
                        app:layout_constraintLeft_toLeftOf="@+id/sets_text"
                        app:layout_constraintTop_toTopOf="@+id/player_one_games_text" />

                    <TextSwitcher
                        android:id="@+id/player_two_sets_text"
                        style="@style/ScoreValues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="00"
                        app:layout_constraintLeft_toLeftOf="@+id/player_one_sets_text"
                        app:layout_constraintTop_toTopOf="@+id/player_two_games_text" />

                    <TextView
                        android:id="@+id/previous_sets_text"
                        style="@style/ScoreInformation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/previous_sets"
                        app:layout_constraintLeft_toRightOf="@+id/sets_text"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextSwitcher
                        android:id="@+id/player_one_set_one_text"
                        style="@style/ScoreValues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="00"
                        app:layout_constraintLeft_toLeftOf="@+id/previous_sets_text"
                        app:layout_constraintTop_toTopOf="@+id/player_one_sets_text" />

                    <TextSwitcher
                        android:id="@+id/player_one_set_two_text"
                        style="@style/ScoreValues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:text="00"
                        app:layout_constraintLeft_toRightOf="@+id/player_one_set_one_text"
                        app:layout_constraintTop_toTopOf="@+id/player_one_set_one_text" />

                    <TextSwitcher
                        android:id="@+id/player_one_set_three_text"
                        style="@style/ScoreValues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:text="00"
                        app:layout_constraintLeft_toRightOf="@+id/player_two_set_two_text"
                        app:layout_constraintTop_toTopOf="@+id/player_two_set_two_text" />

                    <TextSwitcher
                        android:id="@+id/player_one_set_four_text"
                        style="@style/ScoreValues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:text="00"
                        app:layout_constraintLeft_toRightOf="@+id/player_two_set_three_text"
                        app:layout_constraintTop_toTopOf="@+id/player_two_set_three_text" />

                    <TextSwitcher
                        android:id="@+id/player_two_set_one_text"
                        style="@style/ScoreValues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="00"
                        app:layout_constraintLeft_toLeftOf="@+id/player_one_set_one_text"
                        app:layout_constraintTop_toTopOf="@+id/player_two_sets_text" />

                    <TextSwitcher
                        android:id="@+id/player_two_set_two_text"
                        style="@style/ScoreValues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:text="00"
                        app:layout_constraintLeft_toRightOf="@+id/player_two_set_one_text"
                        app:layout_constraintTop_toTopOf="@+id/player_two_set_one_text" />

                    <TextSwitcher
                        android:id="@+id/player_two_set_three_text"
                        style="@style/ScoreValues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:text="00"
                        app:layout_constraintLeft_toRightOf="@+id/player_one_set_two_text"
                        app:layout_constraintTop_toTopOf="@+id/player_one_set_two_text" />

                    <TextSwitcher
                        android:id="@+id/player_two_set_four_text"
                        style="@style/ScoreValues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:text="00"
                        app:layout_constraintLeft_toRightOf="@+id/player_one_set_three_text"
                        app:layout_constraintTop_toTopOf="@+id/player_one_set_three_text" />

                    <TextView
                        android:id="@+id/game_type_text"
                        android:layout_width="784dp"
                        android:layout_height="wrap_content"
                        android:text="@string/played_wimbledon5"
                        android:layout_marginTop="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/player_two_points_text"
                        android:layout_marginLeft="0dp"
                        app:layout_constraintLeft_toLeftOf="@+id/player_two_games_text" />

                </android.support.constraint.ConstraintLayout>
            </HorizontalScrollView>
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/bottom_toolbar_layout"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1F8E9"
            android:elevation="16dp">

            <ImageButton
                android:id="@+id/reset_match_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="88dp"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:onClick="onNewMatchPress"
                android:text="@string/reset"
                android:theme="@style/Color.Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/new_match"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/undo_point_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="88dp"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:onClick="onUndoPress"
                android:text="@string/undo"
                android:theme="@style/Color.Button"
                app:layout_constraintBottom_toTopOf="@+id/reset_match_button"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/undo"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/save_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="88dp"
                android:layout_height="56dp"
                android:layout_marginRight="16dp"
                android:onClick="onSaveMatchPress"
                android:text="@string/save"
                android:theme="@style/Color.Button"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/save"
                android:layout_marginEnd="16dp" />

        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</RelativeLayout>