<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_details">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/widgetTitleImageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:background="@drawable/background_dark"
            android:weightSum="5">

            <TextView
                android:id="@+id/matchWinnerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/app_name"
                android:textAlignment="textEnd"
                android:textColor="@color/secondaryLightColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/beatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/secondaryLightColor" />

            <TextView
                android:id="@+id/matchLoserTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="2"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/secondaryLightColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:background="@drawable/background_dark"
            android:weightSum="5">

            <TextView
                android:id="@+id/matchWinnerScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text=""
                android:textAlignment="textEnd"
                android:textColor="@color/secondaryLightColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/matchPlayedLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/secondaryLightColor" />

            <TextView
                android:id="@+id/matchLoserScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="2"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/secondaryLightColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/widgetTitleImageView"
            app:layout_constraintTop_toBottomOf="@+id/layoutScores">

            <ImageButton
                android:id="@+id/widgetActionOneButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter"
                android:tint="@color/secondaryLightColor"
                android:backgroundTint="@color/primaryDarkColor"
                app:srcCompat="@drawable/ic_team_one_black_24dp" />

            <ImageButton
                android:id="@+id/widgetActionTwoButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter"
                android:tint="@color/secondaryLightColor"
                android:backgroundTint="@color/primaryDarkColor"
                app:srcCompat="@drawable/ic_team_two_black_24dp" />

            <ImageButton
                android:id="@+id/widgetUndoButon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter"
                android:tint="@color/secondaryLightColor"
                android:backgroundTint="@color/primaryDarkColor"
                app:srcCompat="@drawable/ic_undo_black_24dp" />

            <ImageButton
                android:id="@+id/widgetAnnounceButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter"
                android:tint="@color/secondaryLightColor"
                android:backgroundTint="@color/primaryDarkColor"
                app:srcCompat="@drawable/ic_volume_up_black_24dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>