<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="0dp" android:left="0dp" android:bottom="0dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@android:color/darker_gray"
                android:endColor="@color/primaryTextColor"
                android:type="linear"
                android:angle="90">
                <!-- android:angle="270" only can do this if we somehow start lower-->
            </gradient>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:right="0dp" android:left="0dp" android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/primaryTextColor"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
</layer-list>